#cd /opt/sun/comms/messaging64/sbin
#cd /opt/sun/comms/messaging/sbin
msg_pkg=`pkginfo |grep SUNWmessaging |cut -f2 -d" "`
msg_dir=`pkginfo -l $msg_pkg|grep BASEDIR |cut -f2 -d":"`
cd $msg_dir/sbin
./configutil -o local.sso.uwc.verifyurl -v https://`hostname`.us.oracle.com:81/uwc/VerifySSO?
echo "OK SET"
./configutil -o local.sso.ims.verifyurl -v https://`hostname`.us.oracle.com/VerifySSO?
echo "OK SET"
./configutil -o local.webmail.sso.amnamingurl -v https://`hostname`.us.oracle.com:81/amserver/namingservice
echo "OK SET"
./configutil -o local.webmail.sso.amcookiename -v iPlanetDirectoryPro
echo "OK SET"
./configutil -o local.webmail.sso.cookiedomain -v us.oracle.com
echo "OK SET"
./configutil -o local.webmail.sso.enable -v 1
echo "OK SET"
./configutil -o local.webmail.sso.id -v ims
echo "OK SET"
./configutil -o local.webmail.sso.uwcenabled -v 1
echo "OK SET"
./configutil -o local.webmail.sso.uwclogouturl -v https://`hostname`.us.oracle.com:81/uwc/base/UWCMain?op=logout
echo "OK SET"
./configutil -o local.webmail.sso.uwcport -v 81
echo "OK SET"
./configutil -o local.webmail.sso.uwchome -v https://www.sun.com
echo "OK SET"
./configutil -o local.webmail.sso.uwccontexturi -v "uwc"
echo "OK SET"
./configutil -o local.service.http.showunreadcounts -v 1
./stop-msg
./start-msg
cd -
