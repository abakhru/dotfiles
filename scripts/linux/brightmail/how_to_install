mkdir -p /space/brightmail
cd /space/brightmail
cp Symantec*.tgz.gz .
unzip Symantec*.tgz.gz
tar xvf Symantec*.tgz
mkdir -p /opt/symantec/sbas/Scanner/
/usr/sbin/groupadd -r bmi
/usr/sbin/useradd -c "dummy user for Brightmail" -d /opt/symantec/sbas/Scanner/ -r -g bmi mailwall
/usr/sbin/groupadd -r mysql
/usr/sbin/useradd -c "MySQL user" -r -g mysql mysql
cd /space/brightmail/SBMF_610/
./install
#Install only the Bmi Client, BMI server is available at algy.sfbay.sun.com at port 9998
# Now add the /opt/symantec/sbas/Scanner/lib to the LD_LIBRARY_PATH
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/opt/symantec/sbas/Scanner/lib:.
